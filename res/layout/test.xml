<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="         Math4kids, Developed by the students of FEDERAL INSTITUTE OF SCIENCE AND TECHNOLOGY (FISAT) as the part of FISAT&apos;s collabration with IIT Bombay to support AKASH Tablet. The project is Open Source And is available at www.millioncode.fisat.ac.in"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="About"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp" />

    <Button
        android:id="@+id/butoption"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/scrollView1"
        android:background="@drawable/ic_launcher" />

</RelativeLayout>
